@model EmployeeViewModel

<div class="container">
    @if (TempData["Done"] != null)
    {
        <h2 class="alert-success">@TempData["Done"]</h2>
    }

    <div class="row">
        <div class="col-sm-12">
            <h3>AGREGAR / EDITAR EMPLEADO</h3>
        </div>
        <div class="row">
            <form method="post">
                <div asp-validation-summary="All"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Id">ID</label>
                        <input type="text" class="form-control mb-3" asp-for="Id" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="FullName">Nombre</label>
                        <input type="text" class="form-control mb-3" asp-for="FullName" placeholder="Ingresa el nombre del empledo">
                        <span asp-validation-for="FullName" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PositionId">Puesto</label>
                        <select class="form-control mb-3" asp-for="PositionId" asp-items="@ViewBag.Positions"></select>
                        <span asp-validation-for="PositionId" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SalaryPerHour">Salario x hora</label>
                        <input type="text" class="form-control mb-3" asp-for="SalaryPerHour" placeholder="Ingresa el salario x hora">
                        <span asp-validation-for="SalaryPerHour" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HoursPerDay">Horas x día</label>
                        <input type="text" class="form-control mb-3" asp-for="HoursPerDay" placeholder="Ingresa las horas a laborar x día">
                        <span asp-validation-for="HoursPerDay" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DaysPerWeek">Días x semana</label>
                        <input type="text" class="form-control mb-3" asp-for="DaysPerWeek" placeholder="Ingresa las dias a laborar x semana">
                        <span asp-validation-for="DaysPerWeek" class=" alert-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="PayrollId">
                <input type="hidden" asp-for="StatusId">
                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Guardar</button>

            </form>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Salario x hora</th>
                    <th scope="col">Horas x día</th>
                    <th scope="col">Días x semana</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in (IEnumerable<EmployeeViewModel>)ViewBag.Employees)
                {
                    <tr>
                        <td width="10%">
                            @item.Id
                        </td>
                        <td width="30%">
                            @item.FullName
                        </td>
                        <td width="5%">
                            @item.SalaryPerHour
                        </td>
                        <td width="5%">
                            @item.HoursPerDay
                        </td>
                        <td width="5%">
                            @item.DaysPerWeek
                        </td>
                        <td>
                            <div role="group" class="w-60 btn-group">
                                <a asp-controller="Employee" asp-action="SearchEmployee" asp-route-id="@item.Id"
                                class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Seleccionar</a>&nbsp;
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>